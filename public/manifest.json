{
    "manifest_version": 3,
    "name": "Amazon Subscribe & Save one-click cancel",
    "description": "Easy way to cancel Subscribe & Save subscriptions on Amazon with just one button click",
    "version": "1.0.2",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/auto-deliveries*",
                "https://www.amazon.ca/auto-deliveries*",
                "https://www.amazon.co.uk/auto-deliveries*",
                "https://www.amazon.de/auto-deliveries*",
                "https://www.amazon.fr/auto-deliveries*",
                "https://www.amazon.it/auto-deliveries*",
                "https://www.amazon.es/auto-deliveries*",
                "https://www.amazon.co.jp/auto-deliveries*",
                "https://www.amazon.in/auto-deliveries*",
                "https://www.amazon.com.au/auto-deliveries*",
                "https://www.amazon.com/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.ca/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.co.uk/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.de/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.fr/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.it/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.es/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.co.jp/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.in/gp/subscribe-and-save/manager/viewsubscriptions*",
                "https://www.amazon.com.au/gp/subscribe-and-save/manager/viewsubscriptions*"
            ],
            "js": [
                "js/content_script.js",
                "js/vendor.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}